<Page x:Class="POP_Project.Views.PerformancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POP_Project.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PerformancePage">

    <Grid Background="LightGray">
        <!-- 정보 표시 영역 (왼쪽 가운데) -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="컨베이어 벨트 속도:" FontSize="20" FontWeight="Bold" Width="180"/>
                <TextBlock Text="{Binding ConveyorSpeed}" FontSize="20" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="램프 상태:" FontSize="20" FontWeight="Bold" Width="180"/>
                <TextBlock Text="{Binding LampStatus}" FontSize="20" />
            </StackPanel>
        </StackPanel>

        <Button Content="←"
        Width="50" Height="50" FontSize="30" FontWeight="Bold"
        HorizontalAlignment="Right" VerticalAlignment="Top"
        Margin="10, 60, 10, 10"
        Command="{Binding NavigateBackCommand}"
        Background="Transparent" Cursor="Hand" />
    </Grid>
</Page>
